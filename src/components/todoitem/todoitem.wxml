<view class="todo-item">
  <text wx:if="{{done}}" bindtap="onMarkTodo">✓</text>
  <text wx:if="{{!done}}" bindtap="onMarkDone">☐</text>
  <text>{{content}}</text>
  <button bindtap="onDeleteTodo">删除</button>
</view>
